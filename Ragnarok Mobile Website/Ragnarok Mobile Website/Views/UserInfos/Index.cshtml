<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserInfo[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserInfo[0].Password)
            </th>
